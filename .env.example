# Platform — "whatsapp" (default) or "telegram"
PLATFORM=whatsapp

# --- WhatsApp (required if PLATFORM=whatsapp) ---
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_APP_SECRET=
WHATSAPP_WABA_ID=

# --- Telegram (required if PLATFORM=telegram) ---
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Optional — set a secret and Telegram will send it in the webhook header for verification
TELEGRAM_WEBHOOK_SECRET=

# --- User ---
# WhatsApp: the user's phone number (e.g. 436641234567)
# Telegram: the user's chat ID (get it from @userinfobot). On Telegram, only this user can talk to the bot.
USER_PHONE_NUMBER=

# --- Voice ---
# OpenAI — used for voice transcription (Whisper) and memory embeddings
OPENAI_API_KEY=
# ElevenLabs — used for text-to-speech voice replies
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# --- Optional ---
# CLAUDE_PATH=/path/to/claude
# HOST=0.0.0.0
# PORT=8000
# DEBUG=false
